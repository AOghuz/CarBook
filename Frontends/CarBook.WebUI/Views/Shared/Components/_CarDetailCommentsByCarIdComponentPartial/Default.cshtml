@model IReadOnlyList<ResultReviewByCarIdDto>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            <h3 class="head">@((Model?.Count ?? 0)) Değerlendirme</h3>

            @if (Model is not null && Model.Any())
            {
                foreach (var item in Model)
                {
                    var img = string.IsNullOrWhiteSpace(item.CustomerImage)
                    ? Url.Content("~/images/no-avatar.png")
                    : item.CustomerImage;

                    <div class="review d-flex">
                        <div class="user-img" style="background-image:url('@img')"></div>
                        <div class="desc">
                            <h4>
                                <span class="text-left">@item.CustomerName</span>
                                <span class="text-right">@item.ReviewDate.ToString("dd.MM.yyyy")</span>
                            </h4>
                            <p class="star">
                                <span>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                    <i class="ion-ios-star"></i>
                                </span>
                                <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                            </p>
                            <p>@item.Comment</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">Henüz değerlendirme yok.</div>
            }
        </div>

        <div class="col-md-5">
            <div class="rating-wrap">
                <h3 class="head">Değerlendirme Sonuçları</h3>
                <div class="wrap">
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star"></i>
                            (98%)
                        </span>
                        <span>20 Reviews</span>
                    </p>
                    <!-- Diğer statik bloklar aynı -->
                </div>
            </div>
        </div>
    </div>
</div>
